<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Data Mahasiswa</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body style="margin: 40px;">
    <div class="container">
      <% if(messages.success) { %>
      <div class="alert alert-info" role="alert"><%= messages.success %></div>
      <% } %>
      <div class="row">
        <div class="col">
          <a href="/mahasiswa/create" class="btn btn-sm btn-success mb-3">Tambah Mahasiswa</a>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Id</th>
                <th>Nama</th>
                <th>NRP</th>
                <th>Tanggal Lahir</th>
                <th>Jenis Kelamin</th>
                <th>Agama</th>
                <th>Hobi</th>
                <th>Alamat</th>
                <th>Program Studi</th>
                <th>Aksi</th>
              </tr>
            </thead>
            <tbody>
              <% for(var i = 0; i < data.length; i++){ %>
              <tr>
                <th><%= (i+1) %></th>
                <td><%= data[i].nama %></td>
                <td><%= data[i].nrp %></td>
                <td><%= data[i].tgl_lahir %></td>
                <td><%= data[i].jenis_kelamin %></td>
                <td><%= data[i].agama %></td>
                <td><%= data[i].hoby %></td>
                <td><%= data[i].alamat %></td>
                <td><%= data[i].program_studi %></td>
                <td>
                  <a href="/mahasiswa/edit/<%= data[i].id_mhs %>" class="btn btn-sm btn-warning">Edit</a>
                  <a href="/mahasiswa/delete/<%= data[i].id_mhs %>" class="btn btn-sm btn-danger" onclick="return confirm('Yakin ingin menghapus?');">Delete</a>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
